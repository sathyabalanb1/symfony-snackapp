{% extends 'base.html.twig' %} 
{% form_theme vendorinfo 'bootstrap_4_layout.html.twig' %}

{% block title %}Add Vendor{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center align-items-center" style="min-height:20vh;margin-top:10px">
    {{ form_start(vendorinfo,{'attr':{'class':'border shadow p-3 rounded'}}) }}
    <center><p style="font-weight:bold;color:green">Add Vendor</p></center>
    {{ form_widget(vendorinfo) }}
    <center><button class="btn btn-success">{{ button_label|default('Submit') }}</button></center>
    <input type="hidden" name="token" value="{{ csrf_token('authenticate') }}">
    {{ form_end(vendorinfo) }}
    
    <ul>
    {% for field, errorMessage in errors | default('')%}
        <li>{{ field }}: {{ errorMessage }}</li>
    {% endfor %}
    </ul>
    </div>
     
    
{% endblock %}


