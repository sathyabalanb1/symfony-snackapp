{% extends 'base.html.twig' %}

{% block body %}

{% if value == 1 %}
{% if app.session %}
        <div class="mb-3 text-center">
            <p>Hi <b><span style="color:dodgerblue;">{{ app.session.get('employeename') }}</span></b></p>
            
            <p>You Have Chosen <b>Yes</b> for Todays Snack<span style="color:green"><b> {{ app.session.get('snackname') }}</b></span></p>
            
            <p>Please Click the Below Button to <b>Edit</b> Your Choice</p>
            
            <a href="{{ path('snacks_edit_no') }}" class="btn btn-primary">I don't Want Snack</a>
        </div>
{% endif %}
{% else %}
{% if app.session %}
        <div class="mb-3 text-center">
            <p>Hi <b><span style="color:dodgerblue;">{{ app.session.get('employeename') }}</span></b></p>
            
            <p>You Have Chosen <b>No</b> for Todays Snack<span style="color:green"><b> {{ app.session.get('snackname') }}</b></span></p>
            
            <p>Please Click the Below Button to <b>Edit</b> Your Choice</p>
            
            <a href="{{ path('snacks_edit_yes') }}" class="btn btn-primary">I Want the Snack</a>
        </div>
{% endif %}
{% endif %}
{% endblock %}
